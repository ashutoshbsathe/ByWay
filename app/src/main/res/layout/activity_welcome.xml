<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Welcome">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/welcome_topappbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:elevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_height="?attr/actionBarSize"
                android:layout_width="?attr/actionBarSize"
                android:layout_margin="5dp"
                android:src="@drawable/ic_launcher_foreground"
                android:id="@+id/welcome_profile"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="10"
                app:civ_shadow_color="@color/colorPrimaryDark" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textColor="#FFFFFF"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcome_mode_text"
            android:textSize="24sp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:text="@string/welcome_swipe_neutral_header"
            android:textColor="@android:color/white"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <com.github.florent37.shapeofview.shapes.RoundRectView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:elevation="4dp"
                android:id="@+id/welcome_swipe_holder"
                app:shape_roundRect_bottomLeftRadius="999dp"
                app:shape_roundRect_bottomRightRadius="999dp"
                app:shape_roundRect_topLeftRadius="999dp"
                app:shape_roundRect_topRightRadius="999dp"
                app:shape_roundRect_borderColor="@android:color/white"
                app:shape_roundRect_borderWidth="2dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/welcome_swipe_container_parent">
                    <com.github.florent37.shapeofview.shapes.CircleView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:elevation="4dp"
                        android:layout_centerInParent="true"
                        app:shape_circle_borderColor="@android:color/white"
                        app:shape_circle_borderWidth="2dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorAccent">
                            <TextView
                                android:id="@+id/welcome_swipe_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/welcome_swipe_neutral"
                                android:textColor="@android:color/white"/>
                        </RelativeLayout>
                    </com.github.florent37.shapeofview.shapes.CircleView>
                </RelativeLayout>


            </com.github.florent37.shapeofview.shapes.RoundRectView>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>